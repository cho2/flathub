{
    "id": "org.kde.lokalize",
    "branch": "master",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.14",
    "sdk": "org.kde.Sdk",
    "command": "lokalize",
    "rename-icon": "lokalize",
    "finish-args": 
    [
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--device=dri"
    ],
    "separate-locales": false,

    "modules": [
        {
            "name": "kross",
            "buildsystem": "cmake-ninja",
            "config-opts": 
            [ 
                "-DENABLE_TESTING=OFF"
            ],
            "sources": 
            [ 
                { 
                    "type": "git",
                    "url": "https://invent.kde.org/frameworks/kross.git",
                    "branch": "v5.69.0"
                }
            ]
        },
        {
            "name": "hunspell",
            "sources": 
            [
                { 
                    "type": "git",
                    "url": "https://github.com/hunspell/hunspell.git"
                },
                {
                    "type": "script",
                    "dest-filename": "autogen.sh",
                    "commands": 
                    [
                        "AUTOMAKE=\"automake --foreign\" autoreconf -vfi"
                    ]
                }
            ]
        },
        {
            "name": "lokalize",
            "buildsystem": "cmake-ninja",
            "sources": 
            [ 
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/20.04.2/src/lokalize-20.04.2.tar.xz",
                    "sha256": "5be017fd63f96053f49d91ca01c6bb3b760c959fc8df47a20cb1705a9b63db5c"
                },
                {
                    "type": "patch",
                    "path": "appdata.patch"
                }                
            ]
        }
    ]
}

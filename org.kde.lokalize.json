{
    "id": "org.kde.lokalize",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.14",
    "sdk": "org.kde.Sdk",
    "command": "lokalize",
    "rename-icon": "lokalize",
    "finish-args": 
    [
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--device=dri",
        "--filesystem=host"
    ],
    "separate-locales": false,

    "modules": [
        {
            "name": "kross",
            "buildsystem": "cmake-ninja",
            "config-opts": 
            [ 
                "-DENABLE_TESTING=OFF"
            ],
            "sources": 
            [ 
                { 
                    "type": "archive",
                    "url": "https://download.kde.org/stable/frameworks/5.69/portingAids/kross-5.69.0.tar.xz",
                    "sha256": "acec70fe97dddd32b05b28747da7761571d8b684641c7848f544a0e67a698f93"
                }
            ]
        },
        {
            "name": "hunspell",
            "sources": 
            [
                { 
                    "type": "archive",
                    "url": "https://github.com/hunspell/hunspell/archive/v1.7.0.tar.gz",
                    "sha256": "bb27b86eb910a8285407cf3ca33b62643a02798cf2eef468c0a74f6c3ee6bc8a"
                },
                {
                    "type": "script",
                    "dest-filename": "autogen.sh",
                    "commands": 
                    [
                        "AUTOMAKE=\"automake --foreign\" autoreconf -vfi"
                    ]
                }
            ]
        },
        {
            "name": "lokalize",
            "buildsystem": "cmake-ninja",
            "sources": 
            [ 
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/20.04.2/src/lokalize-20.04.2.tar.xz",
                    "sha256": "5be017fd63f96053f49d91ca01c6bb3b760c959fc8df47a20cb1705a9b63db5c"
                },
                {
                    "type": "patch",
                    "path": "appdata.patch"
                }                
            ]
        }
    ]
}
